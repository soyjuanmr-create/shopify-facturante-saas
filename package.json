{
  "name": "shopifac",
  "version": "1.0.0",
  "description": "Facturación Electrónica Argentina para Shopify — Integración con Facturante.com",
  "main": "server/index.js",
  "scripts": {
    "dev": "concurrently \"npm run server:dev\" \"npm run client:dev\"",
    "server:dev": "nodemon server/index.js",
    "client:dev": "cd client && npm run dev",
    "build": "cd client && npm run build",
    "start": "node server/index.js",
    "shopify": "shopify app dev",
    "deploy": "shopify app deploy"
  },
  "dependencies": {
    "@prisma/client": "^6.5.0",
    "@shopify/shopify-api": "^12.3.0",
    "@shopify/shopify-app-session-storage-prisma": "^8.0.1",
    "axios": "^1.7.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.4.0",
    "express": "^4.21.0",
    "express-rate-limit": "^7.4.0",
    "helmet": "^8.0.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "concurrently": "^9.1.0",
    "nodemon": "^3.1.0",
    "prisma": "^6.5.0"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
